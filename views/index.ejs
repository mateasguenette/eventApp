
    <h1>home</h1>
    <style>
      #eventCard{
        padding: 10px;
        
      }
      .card-columns {
        @include media-breakpoint-only(lg) {
        column-count: 4;
      }
        @include media-breakpoint-only(xl) {
        column-count: 5;
      }
}
    </style>

    <div class="card-deck">
    <% allEvent.forEach(function(eachEvent){ %>
    
    
    <div id="eventCard" class="card" style="width: 18rem;">
      <img class="card-img-top" src="<%= eachEvent.photo %>" alt="image of event">
      <div class="card-body">
        
          <h5 class="card-title"><%= eachEvent.name %></h5>
          <p class="card-text"> <%= eachEvent.description %></p>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><h6>location: </h6><%= eachEvent.location %></li>
            <li class="list-group-item"><h6>date: </h6><%= eachEvent.date %></li>
            <li class="list-group-item"><h6>price: </h6><%= eachEvent.price %></li>
          </ul>
          <a href="/main/attending/<%=eachEvent.id%>" class="btn btn-primary">attend</a>
          <a href="/main/deatails/<%=eachEvent.id%>" class="btn btn-primary">deatails</a>
        
      </div>
    </div>
  
<% }) %>
</div>
